--- 
import { Image } from 'astro:assets';
import heroImage from '../../images/homepage/homepage-hero.jpg';
---

<section class="relative text-white">
  <div class="absolute inset-0">
    <Image 
      src={heroImage}
      alt="Entrümpelung Mitarbeiter beim Verladen von Möbeln" 
      class="w-full h-full object-cover"
      quality="high"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/85 to-blue-800/70"></div>
  </div>
  
  <div class="container relative py-20 md:py-28">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Über Entrümpelung Nord - Ihr Experte in Kiel & Norddeutschland
      </h1>
      
      <p class="text-xl md:text-2xl text-blue-100">
        Mehrere Jahre Erfahrung in professioneller Haushaltsauflösung und fachgerechter Entrümpelung
      </p>
      
      <div class="mt-8 flex flex-wrap justify-center gap-3">
        <span class="inline-block bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm">
          Familienbetrieb aus Kiel
        </span>
        <span class="inline-block bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm">
          Über 50 erfolgreiche Entrümpelungen
        </span>
        <span class="inline-block bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm">
          Zertifizierter Entsorgungsfachbetrieb
        </span>
      </div>
    </div>
  </div>
</section> 