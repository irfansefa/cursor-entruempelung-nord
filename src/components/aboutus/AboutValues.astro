---
const values = [
  {
    title: "Kundenzufriedenheit steht an erster Stelle",
    description: "Wir wissen, dass eine Entrümpelung oft mit emotionalen oder logistischen Herausforderungen verbunden ist. Deshalb legen wir besonderen Wert auf individuelle Beratung, schnelle Terminvergabe und eine unkomplizierte Abwicklung. Unser Team arbeitet zuverlässig, diskret und stets mit dem Ziel, Ihre Erwartungen zu übertreffen.",
    icon: "users"
  },
  {
    title: "Faire Preise & Transparenz",
    description: "Wir bieten Ihnen eine kostenlose Besichtigung und ein Festpreisangebot ohne versteckte Kosten. So wissen Sie von Anfang an, welche Kosten auf Sie zukommen – fair, transparent und nachvollziehbar.",
    icon: "euro"
  },
  {
    title: "Nachhaltigkeit & Umweltbewusstsein",
    description: "Als umweltbewusstes Unternehmen setzen wir auf fachgerechte Entsorgung und Recycling. Gut erhaltene Gegenstände spenden wir an soziale Einrichtungen, um Ressourcen zu schonen und Gutes zu tun. Unser Ziel ist es, Abfälle so weit wie möglich zu reduzieren und wertvolle Materialien einem zweiten Lebenszyklus zuzuführen.",
    icon: "leaf"
  }
];

// Simple icon mapping function
const getIcon = (iconName: string) => {
  switch(iconName) {
    case 'users':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
              </svg>`;
    case 'euro':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 7.756a4.5 4.5 0 100 8.488M7.5 10.5h5.25m-5.25 3h5.25M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
    case 'leaf':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
              </svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
              </svg>`;
  }
};
---

<section class="section bg-white">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Unsere Werte</h2>
      <p class="text-lg text-gray-600">
        Was uns auszeichnet und wofür wir stehen
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {values.map(value => (
        <div class="bg-gray-50 rounded-lg p-8 hover:shadow-md transition-shadow duration-300 border-t-4 border-blue-500">
          <div class="w-14 h-14 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mb-6">
            <Fragment set:html={getIcon(value.icon)} />
          </div>
          <h3 class="text-xl font-semibold mb-4">{value.title}</h3>
          <p class="text-gray-600">{value.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 