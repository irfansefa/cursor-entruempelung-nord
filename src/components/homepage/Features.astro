---
const features = [
  {
    title: "Zuverlässig & Professionell",
    description: "Unser erfahrenes Team arbeitet effizient, sauber und termingerecht. Wir garantieren Ihnen eine professionelle Abwicklung Ihrer Entrümpelung – von der ersten Kontaktaufnahme bis zur besenreinen Übergabe.",
    icon: "check"
  },
  {
    title: "Faire Preise & Kostenlose Besichtigung",
    description: "Wir bieten Ihnen transparente Preise ohne versteckte Kosten. Nach einer kostenlosen Vor-Ort-Besichtigung erhalten Sie ein unverbindliches Festpreisangebot, das alle Leistungen beinhaltet.",
    icon: "euro"
  },
  {
    title: "Umweltfreundliche Entsorgung",
    description: "Als verantwortungsbewusstes Unternehmen legen wir großen Wert auf eine nachhaltige und fachgerechte Entsorgung. Wiederverwertbare Gegenstände werden gespendet oder recycelt, um die Umwelt zu schonen.",
    icon: "leaf"
  }
];

// Simple icon mapping function
const getIcon = (iconName: string) => {
  switch(iconName) {
    case 'check':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
    case 'euro':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 7.756a4.5 4.5 0 100 8.488M7.5 10.5h5.25m-5.25 3h5.25M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
    case 'leaf':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
              </svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>`;
  }
};
---

<section class="section bg-white">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Warum Entrümpelung Nord?</h2>
      <p class="text-lg text-gray-600">
        Wir sind Ihr zuverlässiger Partner für professionelle Entrümpelungen in Norddeutschland.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="bg-gray-50 rounded-lg p-6 hover:shadow-md transition-shadow duration-300">
          <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mb-4">
            <Fragment set:html={getIcon(feature.icon)} />
          </div>
          <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 