---
import { Image } from 'astro:assets';
import heroImage from '../../images/homepage/homepage-hero.jpg';
---

<section class="relative text-white">
  {/* Hero background image */}
  <div class="absolute inset-0">
    <Image 
      src={heroImage}
      alt="Entrümpelung Mitarbeiter beim Verladen von Möbeln" 
      class="w-full h-full object-cover"
      quality="high"
    />
    {/* Dark overlay for better text readability */}
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/85 to-blue-800/70"></div>
  </div>
  
  <div class="container relative py-16 md:py-24 lg:py-32">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Zuverlässige Entrümpelung & Haushalts&shy;auflösung in Nord&shy;deutschland
      </h1>
      
      <p class="text-xl md:text-2xl text-blue-100 mb-8">
        Professionelle Entrümpelung in Hamburg, Kiel, Schleswig-Holstein und ganz Norddeutschland – schnell, fair und umweltfreundlich
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="/kontakt" class="btn bg-white text-blue-800 hover:bg-blue-50">
          Kostenloses Angebot
        </a>
        <a href="/services" class="btn border-2 border-white text-white hover:bg-white/10">
          Unsere Leistungen
        </a>
      </div>
    </div>
  </div>
</section> 