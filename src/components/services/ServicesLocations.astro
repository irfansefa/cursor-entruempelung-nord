---
const regions = [
  {
    name: "Schleswig-Holstein",
    cities: [
      "Kiel und Umgebung (Schwentinental, Kronshagen, Altenholz)",
      "Lübeck und Umgebung (Travemünde, Bad Schwartau, Timmendorfer Strand)",
      "Flensburg und Umgebung (Glücksburg, Harrislee, Handewitt)",
      "Neumünster, Rendsburg, Eckernförde, Husum, Schleswig"
    ]
  },
  {
    name: "Hamburg",
    cities: [
      "Hamburg-Stadt (alle Stadtteile)",
      "Hamburg-Umland (Norderstedt, Ahrensburg, Pinneberg, Wedel)"
    ]
  },
  {
    name: "Bremen",
    cities: [
      "Bremen-Stadt und Bremerhaven",
      "Bremen-Umland (Delmenhorst, Achim, Lilienthal)"
    ]
  },
  {
    name: "Niedersachsen",
    cities: [
      "Hannover, Braunschweig, Osnabrück, Oldenburg",
      "Lüneburg, Wolfsburg, Göttingen, Hildesheim"
    ]
  },
  {
    name: "Mecklenburg-Vorpommern",
    cities: [
      "Rostock, Schwerin, Neubrandenburg",
      "Wismar, Stralsund, Greifswald"
    ]
  }
];
---

<section class="py-16 bg-gray-50">
  <div class="container">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Entrümpelung in Norddeutschland</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Unser Einzugsgebiet
        </p>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg overflow-hidden p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {regions.map(region => (
            <div class="bg-blue-50 rounded-lg p-6 border-t-4 border-blue-600 shadow-md">
              <h3 class="text-xl font-bold text-blue-800 mb-4">{region.name}</h3>
              <ul class="space-y-4 text-gray-700">
                {region.cities.map(city => (
                  <li class="flex items-start p-2 border-b border-blue-100">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0 mt-0.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                    <span>{city}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
        
        <div class="mt-16 p-6 bg-blue-50 rounded-lg border border-blue-200">
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-blue-800 mb-2">Jetzt kostenloses Angebot anfordern!</h3>
              <p class="text-gray-700">
                Sie benötigen eine professionelle Entrümpelung in Norddeutschland? Kontaktieren Sie uns jetzt für ein <strong>kostenloses und unverbindliches Angebot</strong>!
              </p>
              <div class="mt-4 flex flex-wrap gap-4">
                <a href="tel:+4943112846305" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                  </svg>
                  Telefon: +49 431 128 46 305
                </a>
                <a href="mailto:info@entruempelungnord.de" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg>
                  E-Mail: info@entruempelungnord.de
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 