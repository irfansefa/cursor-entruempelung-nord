---
const steps = [
  {
    number: 1,
    title: "Kostenlose Erstberatung",
    description: "Telefonisch oder per E-Mail besprechen wir Ihr Anliegen."
  },
  {
    number: 2,
    title: "Vor-Ort-Besichtigung",
    description: "Wir begutachten die zu entrümpelnden Räumlichkeiten kostenlos und unverbindlich."
  },
  {
    number: 3,
    title: "Transparentes Festpreisangebot",
    description: "Sie erhalten ein detailliertes Angebot ohne versteckte Kosten."
  },
  {
    number: 4,
    title: "Terminvereinbarung",
    description: "Wir planen die Entrümpelung nach Ihren zeitlichen Wünschen."
  },
  {
    number: 5,
    title: "Professionelle Durchführung",
    description: "Unser erfahrenes Team führt die Entrümpelung zügig und sorgfältig durch."
  },
  {
    number: 6,
    title: "Fachgerechte Entsorgung",
    description: "Wir sorgen für eine umweltgerechte Verwertung aller Materialien."
  },
  {
    number: 7,
    title: "Besenreine Übergabe",
    description: "Nach Abschluss der Arbeiten übergeben wir Ihnen die Räumlichkeiten in einwandfreiem Zustand."
  }
];
---

<section class="py-8 bg-gray-100">
  <div class="container">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 break-words hyphens-auto">Unser Entrümpelungs&shy;prozess</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          So gehen wir vor
        </p>
      </div>
      
      <div class="relative">
        <div class="space-y-6">
          {steps.map((step, index) => (
            <div class="relative mb-6">
              <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
                <!-- Two column layout inside the card -->
                <div class="flex gap-6">
                  <!-- Number column - fixed width for all steps -->
                  <div class="w-16 flex-shrink-0 bg-blue-600 text-white flex items-center justify-center self-stretch">
                    <div class="text-4xl font-bold">{step.number}</div>
                  </div>
                  
                  <!-- Content column -->
                  <div class="p-4 flex-grow min-w-0">
                    <h3 class="text-2xl font-bold text-blue-700 mb-1 break-words hyphens-auto">{step.title}</h3>
                    <p class="text-gray-600 break-words hyphens-auto">{step.description}</p>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div class="mt-16 text-center">
        <a href="/kontakt" class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
          Kostenloses Angebot anfordern
        </a>
      </div>
    </div>
  </div>
</section> 