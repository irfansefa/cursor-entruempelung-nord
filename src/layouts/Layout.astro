---
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const { 
	title, 
	description = "Professionelle Entrümpelung & Haushaltsauflösung in Norddeutschland. Schnell, fair und umweltfreundlich. Jetzt kostenloses Angebot anfordern!",
	ogImage = "/images/og-image.jpg" 
} = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title} | Entrümpelung Nord</title>
		<meta name="title" content={`${title} | Entrümpelung Nord`} />
		<meta name="description" content={description} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={`${title} | Entrümpelung Nord`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(ogImage, Astro.url)} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={`${title} | Entrümpelung Nord`} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(ogImage, Astro.url)} />
		
		<!-- Preload fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body class="flex flex-col min-h-screen">
		<Header />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
