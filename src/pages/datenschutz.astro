---
import Layout from '../layouts/Layout.astro';
import { Content as PrivacyPolicy } from '../../documentation/content/datenschutz.md';
import StructuredData from '../components/common/StructuredData.astro';
import { generateBreadcrumbSchema } from '../utils/structuredDataUtils.js';
import { createBreadcrumbs } from '../utils/urlUtils.js';
import ogImage from '../images/seo/og-image.jpg';
import '../styles/prose.css';

const title = "Datenschutz | Entrümpelung Nord";
const description = "Datenschutzerklärung von Entrümpelung Nord. Erfahren Sie, wie wir Ihre personenbezogenen Daten schützen und verarbeiten gemäß der aktuellen Datenschutzrichtlinien.";
const canonicalUrl = "/datenschutz/";

// Generate breadcrumb data using URL utilities
const breadcrumbs = createBreadcrumbs([
  { name: "Datenschutz", path: "/datenschutz/" }
]);

// Generate structured data
const breadcrumbData = generateBreadcrumbSchema(breadcrumbs);
---

<Layout 
  title={title}
  description={description}
  ogImage={ogImage}
  canonicalUrl={canonicalUrl}
>
  <StructuredData type="BreadcrumbList" data={breadcrumbData} />
  
  <main>
    <section class="py-8 bg-gradient-to-b from-blue-50 to-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          
          <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-8 md:p-10 prose prose-lg">
              <PrivacyPolicy />
            </div>
          </div>
          
          <div class="text-center mt-8">
            <a href="/" class="inline-flex items-center px-6 py-3 text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Zurück zur Startseite
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout> 