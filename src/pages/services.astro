---
import Layout from '../layouts/Layout.astro';
import ServicesHero from '../components/services/ServicesHero.astro';
import ServicesIntro from '../components/services/ServicesIntro.astro';
import ServicesList from '../components/services/ServicesList.astro';
import ServicesProcess from '../components/services/ServicesProcess.astro';
import ServicesLocations from '../components/services/ServicesLocations.astro';
import CTA from '../components/common/CTA.astro';
import StructuredData from '../components/common/StructuredData.astro';
import { generateBreadcrumbSchema, generateServiceSchema } from '../utils/structuredDataUtils.js';
import { createBreadcrumbs } from '../utils/urlUtils.js';

const title = "Unsere Entrümpelungsleistungen in Kiel & Norddeutschland";
const description = "Vom Keller bis zum Dachboden - unsere professionellen Entrümpelungs- und Haushaltsauflösungsdienste für Privatkunden und Unternehmen. Umweltfreundlich und zuverlässig.";
const ogImage = "/images/seo/services-og-image.jpg";
const canonicalUrl = "/services/";

// Generate breadcrumb data using URL utilities
const breadcrumbs = createBreadcrumbs([
  { name: "Unsere Leistungen", path: "/services/" }
]);

// Generate structured data
const breadcrumbData = generateBreadcrumbSchema(breadcrumbs);

// Service data with specific customizations for the services page
const servicesData = generateServiceSchema({
  name: "Entrümpelungs- und Haushaltsauflösungsleistungen",
  description: "Umfassende Entrümpelungs- und Haushaltsauflösungsdienste in Kiel und Norddeutschland. Wir bieten maßgeschneiderte Lösungen für jede Situation.",
  catalogName: "Entrümpelungsservices"
});
---

<Layout 
  title={title}
  description={description}
  ogImage={ogImage}
  canonicalUrl={canonicalUrl}
>
  <StructuredData type="BreadcrumbList" data={breadcrumbData} />
  <StructuredData type="Service" data={servicesData} />
  
  <ServicesHero />
  <ServicesIntro />
  <ServicesList />
  <ServicesProcess />
  <ServicesLocations />
  <CTA />
</Layout> 